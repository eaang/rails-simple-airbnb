<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>
  <body>
    <nav class="navbar navbar-light bg-light justify-content-between">
      <a class="navbar-brand" href=<%= flats_path %>>Simple Airbnb</a>
      <div class="search-and-new-wrapper d-flex">
        <form class="form-inline">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <%= button_to "Search", controller: :flats, action: :query, class: "btn btn-outline-success my-2 my-sm-0" %>          
        </form>
        <div class="button-wrapper">
          <%=  link_to "New Flat", new_flat_path, class: "btn btn-outline-primary my-2 my-sm-0 ml-2" %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
